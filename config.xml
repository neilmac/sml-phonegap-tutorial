<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns       = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.sanctusmedia.mobile.employeedirectory"
        versionCode = "10"
        version     = "1.1.7">
 
    <name>Employee Directory</name>
 
    <description>
        A simple employee directory application
    </description>
 
    <author href="http://www.sanctusmedia.com" email="neil@sanctusmedia.com">
		Neil MacLennan
    </author>
 
    <feature name="http://api.phonegap.com/1.0/camera"/>
    <feature name="http://api.phonegap.com/1.0/contacts"/>
    <feature name="http://api.phonegap.com/1.0/file"/>
    <feature name="http://api.phonegap.com/1.0/geolocation"/>
    <feature name="http://api.phonegap.com/1.0/media"/>
    <feature name="http://api.phonegap.com/1.0/network"/>
    <feature name="http://api.phonegap.com/1.0/notification"/>
    
	<preference name="orientation" value="default" /> 
	<preference name="target-device" value="universal" /> 
	<preference name="fullscreen" value="true" /> 
	<preference name="prerendered-icon" value="true" /> 
	<preference name="ios-statusbarstyle" value="black-opaque" /> 
	<preference name="detect-data-types" value="true" /> 
	<preference name="exit-on-suspend" value="false" /> 
	<preference name="auto-hide-splash-screen" value="true" /> 
	<preference name="disable-cursor" value="false" /> 
	<preference name="android-minSdkVersion" value="7" /> 
	<preference name="android-installLocation" value="auto" />

	<plugin name="org.apache.cordova.battery-status" version="0.2.11" />
	<plugin name="org.apache.cordova.camera" version="0.3.2" />
	<plugin name="org.apache.cordova.console" version="0.2.11" />
	<plugin name="org.apache.cordova.contacts" version="0.2.13" />
	<plugin name="org.apache.cordova.device" version="0.2.12" />
	<plugin name="org.apache.cordova.device-motion" version="0.2.10" />
	<plugin name="org.apache.cordova.device-orientation" version="0.3.9" />
	<plugin name="org.apache.cordova.dialogs" version="0.2.10" />
	<plugin name="org.apache.cordova.file" version="1.3.1" />
	<plugin name="org.apache.cordova.file-transfer" version="0.4.6" />
	<plugin name="org.apache.cordova.geolocation" version="0.3.10" />
	<plugin name="org.apache.cordova.globalization" version="0.3.1" />
	<plugin name="org.apache.cordova.inappbrowser" version="0.5.2" />
	<plugin name="org.apache.cordova.media" version="0.2.13" />
	<plugin name="org.apache.cordova.media-capture" version="0.3.3" />
	<plugin name="org.apache.cordova.network-information" version="0.2.12" />
	<plugin name="org.apache.cordova.splashscreen" version="0.3.4" />
	<plugin name="org.apache.cordova.vibration" version="0.3.11" />
 
</widget>